<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="请输入关键字"
            android:textColor="@color/common_color_dark_gray"
            android:textSize="@dimen/common_size_normal" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="请输入关键字"
            android:textColor="@color/common_color_gray"
            android:textSize="@dimen/common_size_normal" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="请输入关键字"
            android:textColor="@color/common_color_gray"
            android:textSize="@dimen/common_size_normal" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="请输入关键字"
            android:textColor="@color/common_color_gray"
            android:textSize="@dimen/common_size_normal" />
    </LinearLayout>

    <TextView
        android:id="@android:id/button1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginRight="14dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="选择"
        android:layout_gravity="center_vertical"
        android:background="@drawable/common_round_blue_select_bg"
        android:textColor="@color/common_color_white"
        android:textSize="@dimen/common_size_small"
        android:gravity="center" />
</LinearLayout>