<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimary" >

    <RelativeLayout
        android:id="@+id/base_id_back"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/left_arrow_selector"
            android:drawablePadding="5dp"
            android:textColor="@color/common_color_white"
            android:textSize="@dimen/common_size_normal" />
    </RelativeLayout>

    <TextView
        android:id="@+id/base_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/common_color_white"
        android:textSize="@dimen/common_size_big" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:minWidth="48dp" >

        <ImageView
            android:id="@+id/base_right_btn"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/base_right_txt"
            android:layout_width="wrap_content"
            android:minWidth="40dp"
            android:layout_height="50dp"
            android:paddingLeft="8dp"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/common_color_white"
            android:textSize="@dimen/common_size_normal"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BFBFBF"
        android:layout_alignParentBottom="true" />
</RelativeLayout>