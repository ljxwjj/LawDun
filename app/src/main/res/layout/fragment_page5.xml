<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include layout="@layout/action_bar"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/span1Bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/bottomMargin"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"/>

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/span1Bg"
                app:layout_constraintRight_toRightOf="@id/span1Bg"
                app:layout_constraintTop_toTopOf="@id/span1Bg"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:background="@drawable/green_round_50_shape_bg"
                tools:text="@string/xxx"
                android:textSize="@dimen/common_size_large"
                android:textColor="@color/common_color_white"/>

            <TextView
                android:id="@+id/caseValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="@id/span1Bg"
                app:layout_constraintRight_toLeftOf="@id/audintValue"
                app:layout_constraintTop_toBottomOf="@id/userName"
                app:layout_constraintHorizontal_chainStyle="spread"
                android:gravity="center"
                tools:text="0"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/common_size_normal"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/audintValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/caseValue"
                app:layout_constraintRight_toLeftOf="@id/billValue"
                app:layout_constraintTop_toTopOf="@id/caseValue"
                android:gravity="center"
                tools:text="0"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/common_size_normal"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/billValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/audintValue"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/caseValue"
                android:gravity="center"
                tools:text="0"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/common_size_normal"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/caseLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="@id/caseValue"
                app:layout_constraintRight_toRightOf="@id/caseValue"
                app:layout_constraintTop_toBottomOf="@id/caseValue"
                android:layout_marginTop="5dp"
                android:text="我的案件(件)"
                android:textColor="@color/common_text_color6"
                android:textSize="@dimen/common_size_normal" />
            <TextView
                android:id="@+id/audintLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="@id/audintValue"
                app:layout_constraintRight_toRightOf="@id/audintValue"
                app:layout_constraintTop_toBottomOf="@id/audintValue"
                android:layout_marginTop="5dp"
                android:text="用印申请(次)"
                android:textColor="@color/common_text_color6"
                android:textSize="@dimen/common_size_normal"/>
            <TextView
                android:id="@+id/billLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="@id/billValue"
                app:layout_constraintRight_toRightOf="@id/billValue"
                app:layout_constraintTop_toBottomOf="@id/billValue"
                android:layout_marginTop="5dp"
                android:text="我的开票(元)"
                android:textColor="@color/common_text_color6"
                android:textSize="@dimen/common_size_normal"/>
            <View
                android:id="@+id/bottomMargin"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                app:layout_constraintTop_toBottomOf="@id/caseLabel"/>

            <View
                android:layout_width="1px"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/caseLabel"
                app:layout_constraintTop_toTopOf="@id/caseValue"
                app:layout_constraintBottom_toBottomOf="@id/caseLabel"
                android:background="@color/common_text_color_hint"/>
            <View
                android:layout_width="1px"
                android:layout_height="0dp"
                app:layout_constraintLeft_toRightOf="@id/audintLabel"
                app:layout_constraintTop_toTopOf="@id/caseValue"
                app:layout_constraintBottom_toBottomOf="@id/caseLabel"
                android:background="@color/common_text_color_hint"/>

            <TextView
                android:id="@+id/jbzl"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintTop_toBottomOf="@id/span1Bg"
                android:text="我的基本资料"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="@dimen/common_size_normal"
                android:textColor="@color/common_text_color"
                android:drawableRight="@mipmap/right_arrow"
                android:background="@drawable/white_item_bg_selector"/>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                app:layout_constraintTop_toBottomOf="@id/jbzl"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/common_text_color_hint"/>

            <TextView
                android:id="@+id/xgmm"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintTop_toBottomOf="@id/line1"
                android:text="修改密码"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="@dimen/common_size_normal"
                android:textColor="@color/common_text_color"
                android:drawableRight="@mipmap/right_arrow"
                android:background="@drawable/white_item_bg_selector" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                app:layout_constraintTop_toBottomOf="@id/xgmm"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/common_text_color_hint"/>

            <TextView
                android:id="@+id/lxwm"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintTop_toBottomOf="@id/line2"
                android:text="联系我们"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="@dimen/common_size_normal"
                android:textColor="@color/common_text_color"
                android:drawableRight="@mipmap/right_arrow"
                android:background="@drawable/white_item_bg_selector" />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                app:layout_constraintTop_toBottomOf="@id/lxwm"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/common_text_color_hint"/>

            <TextView
                android:id="@+id/gywm"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:layout_constraintTop_toBottomOf="@id/line3"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="联系我们"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="@dimen/common_size_normal"
                android:textColor="@color/common_text_color"
                android:drawableRight="@mipmap/right_arrow"
                android:background="@drawable/white_item_bg_selector" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>