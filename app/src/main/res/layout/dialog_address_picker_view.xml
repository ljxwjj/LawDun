<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:background="@drawable/address_picker_header">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="清空"
            android:gravity="center"
            android:textSize="@dimen/common_size_small"
            android:textColor="#FF6464"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择地点"
            android:gravity="center"
            android:textColor="@color/common_text_color_3a"
            android:textSize="@dimen/common_size_normal"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/ok"
            android:gravity="center"
            android:textSize="@dimen/common_size_small"
            android:textColor="@color/common_text_color_3a"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <com.yunfa365.lawservice.app.ui.view.addresspickerlib.AddressPickerView
        android:id="@+id/apvAddress"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@color/common_color_white">

    </com.yunfa365.lawservice.app.ui.view.addresspickerlib.AddressPickerView>
</LinearLayout>