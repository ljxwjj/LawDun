<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#FF21272B">

    <item>
        <selector>

            <item android:state_enabled="true">
                <shape>
                    <solid android:color="#2A89F2" />

                    <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

                    <padding android:bottom="0dp" android:left="7dp" android:right="7dp" android:top="0dp" />
                </shape>
            </item>

            <item android:state_enabled="false">
                <shape>
                    <solid android:color="#a0a0a0" />

                    <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

                    <padding android:bottom="0dp" android:left="7dp" android:right="7dp" android:top="0dp" />
                </shape>

            </item>

        </selector>
    </item>
</ripple>